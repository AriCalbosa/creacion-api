<%- include('header') -%>
<h3>Detalle de Película</h3>
<h4>Título: <%= movie.title %></h4>
<h4>Premios: <%= movie.awards %></h4>
<h4>Rating: <%= movie.rating %></h4>
<h4>Duración: <%= movie.length %></h4>
<h4>Fecha de estreno: <%= movie.release_date %></h4>
<h4>Género: <%= movie.genre.name %></h4>
<h4>Actores: 
    <ul>
        <% for (let i=0; i < movie.actors.length; i++) { %>
            <li>
                <a href=""><%= movie.actors[i].first_name + ' ' + movie.actors[i].last_name %></a>
                <br>
            </li>
        <% } %>
    </ul>
</h4>
<br>
<a href="/movies/edit/<%= movie.id %>">
    <button type="submit" >Editar</button>
</a>
<br>
<br>
<a href="/movies/delete/<%= movie.id %>">
    <button type="submit">Eliminar</button>
</a>
<br>
<br>

<%- include('footer') -%>