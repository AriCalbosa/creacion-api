<%- include('header') -%>
<h3>Editar película <%= movie.title %></h3>
<form action="/movies/edit/<%= movie.id %>?_method=PUT" method="POST">
    <label for="title">Título: </label>
    <input type="text" name="title" id="title" value="<%= movie.title %>">
    <br>
    <label for="awards">Cantidad de premios: </label>
    <input type="text" name="awards" id="awards" value="<%= movie.awards %>">
    <br>
    <label for="rating">Rating: </label>
    <input type="text" name="rating" id="rating" value="<%= movie.rating %>">
    <br>
    <label for="length">Duración: </label>
    <input type="text" name="length" id="length" value="<%= movie.length %>">
    <br>
    <label for="genre_id">Género: </label>
    <select name="genre_id" id="genre_id">
        <% for (let i=0; i < genres.length; i++) { %>
        <option value="<%= genres[i].id %> "  <%= genres[i].id  ==  movie.genre_id  ? 'selected' : null %> > <%= genres[i].name %> </option>
        <% } %>
    </select>
    <br>
    <label for="release_date">Fecha de estreno: </label>
    <input type="date" name="release_date" id="release_date" value="<%= movie.release_date %>">
    <br>
    <button type="submit">Editar película</button>
</form>

<%- include('footer') -%>